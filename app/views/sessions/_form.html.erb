<% labels ||= false %>
<% signup ||= false %>
<%= form_tag sessions_path do %>
  <%= if labels then f.label :login, "Username or email" end %>
  <%= text_field_tag :login, params[:login], placeholder: "Username or email" %>

  <%= labels ? f.label(password) : raw("<br/>") %>
  <%= password_field_tag :password, nil, placeholder: "Password" %><br/>

  <%= if signup then link_to "Sign up!", signup_path, class: "btn" end %>
  <%= submit_tag "Log in", class: "btn btn-primary" %>
<% end %>