<div class="page-header">
	<div class="btn-group pull-right" data-toggle="buttons-radio">
		<button class="btn active" id="showGrid"><i class="icon-th"></i> Grid</button>
		<button class="btn" id="showList"><i class="icon-list"></i> List</button>
	</div>
	<h1>
		<% if @q.nil? %>
			<%= params[:order_type] or 'all' %> Nutshells
		<% else %>
			Nutshells About <code class="giant"><%= @q %></code>
			<a class="btn" href="/" title="Clear search">&times;</a>
		<% end %>
	</h1>
</div>

<ul id="nuts" class="unstyled grid">
	<% @nuts.each do |nut| %>
	<li>
		<div class="nut">
			<span class="title">
				<%= link_to "/#{nut.title}" do nut.title end %>
				<i class="icon-lemon"></i>
			</span>
			<span class="body"><%= nut.body %></span>
			<span class="rating"><%= raw rating nut %></span>
		</div>
	</li>
	<% end %>
</ul>

